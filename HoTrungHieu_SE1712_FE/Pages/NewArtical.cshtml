@page
@model FE.Pages.NewArticalModel
@{
    ViewData["Title"] = "NewArtical Management";
}
<h1>NewArtical</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>
@if (Model.AccountId == 0)
{
    <form method="get">
        <div>
            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" name="startDate" required />
        </div>
        <div>
            <label for="endDate">End Date:</label>
            <input type="date" id="endDate" name="endDate" required />
        </div>
        <button type="submit">Generate Report</button>
    </form>
}
<form method="get">
    <div>
        <label for="searchTitle">Search by News Title:</label>
        <input type="text" id="searchTitle" name="searchTitle" value="@Model.SearchTitle" />
    </div>
    <button type="submit">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].NewsTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].Headline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].NewsContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].NewsSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].NewsStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].UpdatedById)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].ModifiedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleViews[0].CreatedById)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ArticleViews)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Headline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsSource)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedById)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedById.Value)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.NewsArticleId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.NewsArticleId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.NewsArticleId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
